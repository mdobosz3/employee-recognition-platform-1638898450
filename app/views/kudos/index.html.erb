<h1>All Kudos</h1>
<table class="table table-striped table-bordered">
  <thead class="table-secondary">
    <tr>
      <th>Title</th>
      <th>Content</th>
      <th>Giver</th>
      <th>Receiver</th>
    </tr>
  </thead>

  <tbody>
    <% kudos.each do |kudo| %>
      <tr>
        <td><%= kudo.title %></td>
        <td><%= kudo.content %></td>
        <td><%= kudo.giver.email %></td>
        <td><%= kudo.receiver.email %></td>

      </tr>
    <% end %>
  </tbody>
</table>

<br>
<%= link_to 'New Kudos', new_kudo_path, class:"btn btn-secondary" %>
