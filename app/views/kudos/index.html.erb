<h1>All Kudos</h1>
<table class="table table-striped table-bordered">
  <thead class="table-secondary">
    <tr>
      <th>Title</th>
      <th>Content</th>
      <th>Giver</th>
      <th>Receiver</th>
      <th>Company value</th>
      <th colspan="2"></th>
    </tr>
  </thead>
  <tbody>
    <% kudos.each do |kudo| %>
      <tr>
        <td><%= kudo.title %></td>
        <td><%= kudo.content %></td>
        <td><%= kudo.giver.email %></td>
        <td><%= kudo.receiver.email %></td>
        <td><%= kudo.company_value.title %></td>
        <% if kudo.giver == current_employee %>
        <td><%= link_to 'Edit', edit_kudo_path(kudo), class:"btn btn-secondary btn-sm" %> </td>
        <td><%= link_to 'Delete', kudo, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-outline-danger btn-sm" %></td>
        <% else %>
        <td></td>
        <td></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
<br>
<%= link_to 'New Kudo', new_kudo_path, class:"btn btn-secondary" %>
