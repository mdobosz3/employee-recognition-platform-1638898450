<h1>Orders</h1>
<table class="table table-striped table-bordered w-auto shadow-sm">
  <thead  class="table-success">
    <tr class="text-center">
      <th>Title</th>
      <th>Description</th>
      <th>Price</th>
      <th>Purchase time</th>
    </tr>
  </thead>

  <tbody>
    <% current_employee.orders.each do |order| %>
      <tr>
        <td><%= order.reward_snapshot.title %></td>
        <td><%= order.reward_snapshot.description %></td>
        <td><%= order.reward_snapshot.price %></td>
        <td><%= order.created_at.strftime("%d-%m-%y %H:%M") %></td>
        <td><%= order.employee.email %></td>
      </tr>
    <% end %>
  </tbody>
</table>
