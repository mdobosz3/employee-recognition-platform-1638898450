<h1>Company value</h1>
<table class="table table-striped table-bordered w-auto shadow-sm">
  <thead  class="table-success">
    <tr class="text-center">
      <th>Title</th>
      <th>Action</th>
    </tr>
  </thead>

  <tbody>
    <% company_values.each do |company_value| %>
      <tr>
        <td><%= company_value.title %></td>
        <td class="btn-group">
        <%= link_to '<i class="bi bi-pencil"> </i>Edit'.html_safe, edit_admin_company_value_path(company_value), 
        class:"btn btn-outline-secondary btn-sm" %>
        <%= link_to '<i class="bi bi-trash2"> </i>Delete'.html_safe, admin_company_value_path(company_value), 
        method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-outline-danger btn-sm" %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= link_to '<i class="bi bi-file-earmark-plus"> </i>New Company value'.html_safe, new_admin_company_value_path, class:"btn btn-secondary" %>
