<h1>Company value</h1>
<table class="table table-striped table-bordered">
  <thead class="table-secondary">
    <tr>
      <th>Title</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% company_values.each do |company_value| %>
      <tr>
        <td><%= company_value.title %></td>
        <td><%= link_to 'Edit', edit_admin_company_value_path(company_value), class:"btn btn-secondary btn-sm" %></td>
        <td><%= link_to 'Delete', admin_company_value_path(company_value), method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-outline-danger btn-sm" %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>
<%= link_to 'New Company value', new_admin_company_value_path, class:"btn btn-secondary" %>
