<h1>All Kudos</h1>
<table class="table table-striped table-bordered w-auto">
  <thead class="table-secondary">
    <tr class="text-center">
      <th>Title</th>
      <th>Content</th>
      <th>Giver</th>
      <th>Receiver</th>
      <th>Company value</th>
      <th>Action</th>
    </tr>
  </thead>

  <tbody>
    <% kudos.each do |kudo| %>
      <tr>
        <td><%= kudo.title %></td>
        <td><%= kudo.content %></td>
        <td><%= kudo.giver.email %></td>
        <td><%= kudo.receiver.email %></td>
        <td><%= kudo.company_value.title %></td>
        <td class="btn-group"><%= link_to '<i class="bi bi-pencil"></i> Edit'.html_safe, edit_admin_kudo_path(kudo), class:"btn btn-outline-secondary btn-sm" %>
            <%= link_to '<i class="bi bi-trash2"></i> Delete'.html_safe, admin_kudo_path(kudo), method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-outline-danger btn-sm" %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>
<%= link_to 'New Kudo', new_admin_kudo_path, class:"btn btn-secondary" %>
