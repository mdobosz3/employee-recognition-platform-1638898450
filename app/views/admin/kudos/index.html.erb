<h1>Kudos</h1>
<div class="d-flex justify-content-center">
  <table class="table table-borderless table-responsive table-hover shadow card-1 w-auto">
    <thead>
      <tr class="text-center", id="table__header">
      <th>Title</th>
      <th>Content</th>
      <th>Giver</th>
      <th>Receiver</th>
      <th>Company value</th>
      <th>Action</th>
    </tr>
  </thead>

  <tbody>
    <% kudos.each do |kudo| %>
      <tr>
        <td><%= kudo.title %></td>
        <td><%= kudo.content %></td>
        <td class="text-center"><%= kudo.giver.email %></td>
        <td class="text-center"><%= kudo.receiver.email %></td>
        <td class="text-center"><%= kudo.company_value.title %></td>
        <td class="btn-group">
          <%= link_to ' Edit', edit_admin_kudo_path(kudo), class:"btn btn-outline-secondary btn-sm bi bi-pencil" %>
          <%= link_to ' Delete', admin_kudo_path(kudo), method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-outline-danger btn-sm bi bi-trash2" %></td>
      </tr>
    <% end %>
  </tbody>
  <tfoot>
    <td class="text-center" colspan="6">
      <%= link_to ' New Kudo', new_admin_kudo_path, class:"btn btn-warning btn-sm bi bi-file-earmark-plus" %>
    </td> 
  </tfoot>
</table>
</div>
