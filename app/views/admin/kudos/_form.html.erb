<%= form_with(model: [ :admin, kudo ]) do |form| %>
  <% if kudo.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(kudo.errors.count, "error") %> prohibited this admin_kudo from being saved:</h2>

      <ul>
        <% kudo.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field form-group">
    <%= form.label :title %><br>
    <%= form.text_field :title, class:"form-control" %>
  </div>
<br>
  <div class="field form-group">
    <%= form.label :content %><br>
    <%= form.text_area :content, class:"form-control" %>
  </div>
<br>
  <div class="field form-group">
    <%= form.label :giver_id %><br>
    <%= form.collection_select :giver_id, Employee.all, :id, :email, class:"form-control" %>
  </div>
<br>
  <div class="field form-group">
    <%= form.label :receiver_id %><br>
    <%= form.collection_select :receiver_id, Employee.all, :id, :email, class:"form-control" %>
  </div>
<br>
  <div class="field form-group">
    <%= form.label :company_value_id %><br>
    <%= form.collection_select :company_value_id, CompanyValue.all, :id, :title, class:"form-control" %>
  </div>
<br>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
