<h1>Rewards</h1>
<table class="table table-striped table-bordered w-auto shadow-sm">
  <thead  class="table-success">
    <tr class="text-center">
      <th>Title</th>
      <th>Description</th>
      <th>Price</th>
      <th>Photo</th>
      <th>Action</th>
    </tr>
  </thead>

  <tbody>
    <% rewards.each do |reward| %>
      <tr>
        <td style="vertical-align:middle"><%= reward.title %></td>
        <td style="vertical-align:middle"><%= reward.description %></td>
        <td style="text-align: center; vertical-align:middle"><%= reward.price %></td>
        <td style="text-align: center">
          <% if reward.photo.persisted?%>
            <%= image_tag reward.photo, width: '50px' %>
          <%end%>
        </td>
        <td class="btn-group">
        <%= link_to ' Edit', edit_admin_reward_path(reward), 
        class:"btn btn-outline-secondary btn-sm bi bi-pencil" %>
        <%= link_to ' Show', admin_reward_path(reward), 
        class:"btn btn-outline-secondary btn-sm bi bi-pencil" %>
        <%= link_to ' Delete', admin_reward_path(reward), 
        method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-outline-danger btn-sm bi bi-trash2" %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= link_to '<i class="bi bi-file-earmark-plus"> </i>New Reward'.html_safe, new_admin_reward_path, class:"btn btn-secondary" %>
